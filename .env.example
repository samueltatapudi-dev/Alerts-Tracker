# Flask secret key for session cookies
SECRET_KEY=replace-me

# Database uses SQLite by default; override if you need Postgres/MySQL
# SQLALCHEMY_DATABASE_URI=sqlite:///tasks.db

# Mail server configuration
MAIL_SERVER=localhost
MAIL_PORT=1025
MAIL_USE_TLS=false
MAIL_USE_SSL=false
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=Alerts Bot <alerts@example.com>
MAIL_SUPPRESS_SEND=false

# Public URL base used in emails (defaults to request host)
APP_BASE_URL=http://127.0.0.1:5000

# URL scheme for url_for when APP_BASE_URL is not set
PREFERRED_URL_SCHEME=http
